<?php 
	function kanguru($a1,$a2,$b1,$b2)
	{
		$kelinci1=$a1. "";
		$kelinci2=$a2. "";

		echo "Kanguru(".$a1.",".$b1.",".$a2.",".$b2.")";
		echo "<br>";
		for ($i=0; $i < 4; $i++) { 
			# code...
			$a1 += $b1;
			$a2 += $b2;

			@$kanguru1.= $a1. "";
			@$kanguru2.= $a2. "";
		}

		echo "Kanguru 1 = ".$kanguru1;
		echo "<br>";
		echo "Kanguru 2 = ".$kanguru2;
		echo "<br>";

		if ($a1 == $a2) {
			# code...
			echo "<p> <b>Yes !</b> </p>";
		}else{
			echo "<p> <b> No ! </b> </p>";
		}
	}

	kanguru(0,3,4,2); kanguru(1,3,5,1); kanguru(4,2,1,5);
?>
